<Window x:Class="FieldGameTask.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FieldGameTask"
        mc:Ignorable="d"
         Title="GameWindow" Height="560" Width="550" FocusManager.FocusedElement="{Binding ElementName=canvasField}" 
        ResizeMode="CanMinimize">
    <Canvas x:Name="canvasField" HorizontalAlignment="Center" Height="500" Margin="21,10,23,0" VerticalAlignment="Top" Width="500" 
                Focusable="True" KeyDown="Canvas_KeyDown">
        <Rectangle x:Name="rectangleFigure" Fill="Black" Canvas.Left="0" Canvas.Top="0" Width="40" Height="40" />
    </Canvas>
</Window>