<Window x:Class="FieldGameTask.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FieldGameTask"
        mc:Ignorable="d"
        Title="FieldTask" Height="300" Width="300" ResizeMode="CanMinimize">
    <Grid>
        <TextBox x:Name="textboxSize" HorizontalAlignment="Left" FontSize="15" Height="40" 
                 Margin="85,95,0,0"  TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" 
                 PreviewTextInput="TextBox_PreviewTextInput" />
        <Label Content="Enter field size:" HorizontalAlignment="Left" FontSize="15" Margin="85,59,0,0" 
                VerticalAlignment="Top" Width="120"/>
        <Button x:Name="buttonRun" Content="Run" FontSize="15" HorizontalAlignment="Left" Margin="85,144,0,0" 
                VerticalAlignment="Top" Width="120" Click="ButtonRun_Click" Height="43"/>
    </Grid>
</Window>